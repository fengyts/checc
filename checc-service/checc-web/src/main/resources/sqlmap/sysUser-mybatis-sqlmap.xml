<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.SysUserMapper">

	<resultMap type="com.checc.domain.SysUserDO" id="SysUserDOResultMap">
		<id column="id" property="id" />
        <result column="login_name" property="loginName"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
	</resultMap>

	<sql id="MybatisSysUserDAO_all_column_fields">
	      id,login_name,password,mobile,status,create_time,create_user_id,modify_time,modify_user_id
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisSysUserDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="loginName != null  and loginName != '' "> AND login_name=#{loginName} </if>
			<if test="password != null  and password != '' "> AND password=#{password} </if>
			<if test="mobile != null  and mobile != '' "> AND mobile=#{mobile} </if>
			<if test="status != null "> AND status=#{status} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>

	<select id="MybatisSysUserDAO_selectById" parameterType="long" resultMap="SysUserDOResultMap">
	SELECT
		<include refid="MybatisSysUserDAO_all_column_fields" />
	FROM
		sys_user
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisSysUserDAO_insert" parameterType="com.checc.domain.SysUserDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO sys_user(
				id,
				login_name,
				password,
				mobile,
				status,
				create_time,
				create_user_id,
				modify_time,
				modify_user_id
		)values(
				#{id},
				#{loginName},
				#{password},
				#{mobile},
				#{status},
				#{createTime},
				#{createUserId},
				#{modifyTime},
				#{modifyUserId}
		)
    </insert>

	<update id="MybatisSysUserDAO_updateById" parameterType="com.checc.domain.SysUserDO">
		UPDATE sys_user
		SET
					login_name = #{loginName},
					password = #{password},
					mobile = #{mobile},
					status = #{status},
					create_user_id = #{createUserId},
					modify_time = #{modifyTime},
					modify_user_id = #{modifyUserId}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisSysUserDAO_deleteById" parameterType="long">
		DELETE FROM sys_user WHERE id = #{id}
	</delete>

	<update id="MybatisSysUserDAO_update_dynamic" parameterType="com.checc.domain.SysUserDO">
		UPDATE sys_user
		<set>
					<if test="loginName != null  and loginName != '' ">login_name=#{loginName},</if>
					<if test="password != null  and password != '' ">password=#{password},</if>
					<if test="mobile != null  and mobile != '' ">mobile=#{mobile},</if>
					<if test="status != null ">status=#{status},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisSysUserDAO_select_dynamic" resultMap="SysUserDOResultMap" parameterType="com.checc.domain.SysUserDO">
	     SELECT
	     	<include refid="MybatisSysUserDAO_all_column_fields" />
		 FROM
		 	sys_user
			<include refid="MybatisSysUserDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisSysUserDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.SysUserDO">
	     SELECT
	     	count(1)
		 FROM
		 	sys_user
	 	<include refid="MybatisSysUserDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisSysUserDAO_select_dynamic_page_query" resultMap="SysUserDOResultMap" parameterType="com.checc.domain.SysUserDO">
	     SELECT
	     	<include refid="MybatisSysUserDAO_all_column_fields" />
		 FROM
		 	sys_user
	 	<include refid="MybatisSysUserDAO_dynamic_where_fields" />
	 	ORDER BY sys_user.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>