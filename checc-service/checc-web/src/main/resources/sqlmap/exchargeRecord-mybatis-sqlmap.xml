<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.ExchargeRecordMapper">

	<resultMap type="com.checc.domain.ExchargeRecordDO" id="ExchargeRecordDOResultMap">
		<id column="id" property="id" />
        <result column="topic_id" property="topicId"/>
        <result column="item_id" property="itemId"/>
        <result column="user_id" property="userId"/>
        <result column="count" property="count"/>
        <result column="excharge_amount" property="exchargeAmount"/>
        <result column="create_time" property="createTime"/>
	</resultMap>

	<sql id="MybatisExchargeRecordDAO_all_column_fields">
	      id,topic_id,item_id,user_id,count,excharge_amount,create_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisExchargeRecordDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="topicId != null "> AND topic_id=#{topicId} </if>
			<if test="itemId != null "> AND item_id=#{itemId} </if>
			<if test="userId != null "> AND user_id=#{userId} </if>
			<if test="count != null "> AND count=#{count} </if>
			<if test="exchargeAmount != null "> AND excharge_amount=#{exchargeAmount} </if>
		</where>
 	</sql>

	<select id="MybatisExchargeRecordDAO_selectById" parameterType="long" resultMap="ExchargeRecordDOResultMap">
	SELECT
		<include refid="MybatisExchargeRecordDAO_all_column_fields" />
	FROM
		excharge_record
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisExchargeRecordDAO_insert" parameterType="com.checc.domain.ExchargeRecordDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO excharge_record(
				id,
				topic_id,
				item_id,
				user_id,
				count,
				excharge_amount,
				create_time
		)values(
				#{id},
				#{topicId},
				#{itemId},
				#{userId},
				#{count},
				#{exchargeAmount},
				#{createTime}
		)
    </insert>

	<update id="MybatisExchargeRecordDAO_updateById" parameterType="com.checc.domain.ExchargeRecordDO">
		UPDATE excharge_record
		SET
					topic_id = #{topicId},
					item_id = #{itemId},
					user_id = #{userId},
					count = #{count},
					excharge_amount = #{exchargeAmount},
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisExchargeRecordDAO_deleteById" parameterType="long">
		DELETE FROM excharge_record WHERE id = #{id}
	</delete>

	<update id="MybatisExchargeRecordDAO_update_dynamic" parameterType="com.checc.domain.ExchargeRecordDO">
		UPDATE excharge_record
		<set>
					<if test="topicId != null ">topic_id=#{topicId},</if>
					<if test="itemId != null ">item_id=#{itemId},</if>
					<if test="userId != null ">user_id=#{userId},</if>
					<if test="count != null ">count=#{count},</if>
					<if test="exchargeAmount != null ">excharge_amount=#{exchargeAmount},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisExchargeRecordDAO_select_dynamic" resultMap="ExchargeRecordDOResultMap" parameterType="com.checc.domain.ExchargeRecordDO">
	     SELECT
	     	<include refid="MybatisExchargeRecordDAO_all_column_fields" />
		 FROM
		 	excharge_record
			<include refid="MybatisExchargeRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchargeRecordDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.ExchargeRecordDO">
	     SELECT
	     	count(1)
		 FROM
		 	excharge_record
	 	<include refid="MybatisExchargeRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchargeRecordDAO_select_dynamic_page_query" resultMap="ExchargeRecordDOResultMap" parameterType="com.checc.domain.ExchargeRecordDO">
	     SELECT
	     	<include refid="MybatisExchargeRecordDAO_all_column_fields" />
		 FROM
		 	excharge_record
	 	<include refid="MybatisExchargeRecordDAO_dynamic_where_fields" />
	 	ORDER BY excharge_record.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>