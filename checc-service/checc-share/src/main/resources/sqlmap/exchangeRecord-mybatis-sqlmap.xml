<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.ExchangeRecordMapper">

	<resultMap type="com.checc.domain.ExchangeRecordDO" id="ExchangeRecordDOResultMap">
		<id column="id" property="id" />
        <result column="topic_id" property="topicId"/>
        <result column="item_id" property="itemId"/>
        <result column="user_id" property="userId"/>
        <result column="count" property="count"/>
        <result column="exchange_amount" property="exchangeAmount"/>
        <result column="create_time" property="createTime"/>
	</resultMap>

	<sql id="MybatisExchangeRecordDAO_all_column_fields">
	      id,topic_id,item_id,user_id,count,exchange_amount,create_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisExchangeRecordDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="topicId != null "> AND topic_id=#{topicId} </if>
			<if test="itemId != null "> AND item_id=#{itemId} </if>
			<if test="userId != null "> AND user_id=#{userId} </if>
			<if test="count != null "> AND count=#{count} </if>
			<if test="exchangeAmount != null "> AND exchange_amount=#{exchangeAmount} </if>
		</where>
 	</sql>

	<select id="MybatisExchangeRecordDAO_selectById" parameterType="long" resultMap="ExchangeRecordDOResultMap">
	SELECT
		<include refid="MybatisExchangeRecordDAO_all_column_fields" />
	FROM
		exchange_record
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisExchangeRecordDAO_insert" parameterType="com.checc.domain.ExchangeRecordDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO exchange_record(
				id,
				topic_id,
				item_id,
				user_id,
				count,
				exchange_amount,
				create_time
		)values(
				#{id},
				#{topicId},
				#{itemId},
				#{userId},
				#{count},
				#{exchangeAmount},
				#{createTime}
		)
    </insert>

	<update id="MybatisExchangeRecordDAO_updateById" parameterType="com.checc.domain.ExchangeRecordDO">
		UPDATE exchange_record
		SET
					topic_id = #{topicId},
					item_id = #{itemId},
					user_id = #{userId},
					count = #{count},
					exchange_amount = #{exchangeAmount},
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisExchangeRecordDAO_deleteById" parameterType="long">
		DELETE FROM exchange_record WHERE id = #{id}
	</delete>

	<update id="MybatisExchangeRecordDAO_update_dynamic" parameterType="com.checc.domain.ExchangeRecordDO">
		UPDATE exchange_record
		<set>
					<if test="topicId != null ">topic_id=#{topicId},</if>
					<if test="itemId != null ">item_id=#{itemId},</if>
					<if test="userId != null ">user_id=#{userId},</if>
					<if test="count != null ">count=#{count},</if>
					<if test="exchangeAmount != null ">exchange_amount=#{exchangeAmount},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisExchangeRecordDAO_select_dynamic" resultMap="ExchangeRecordDOResultMap" parameterType="com.checc.domain.ExchangeRecordDO">
	     SELECT
	     	<include refid="MybatisExchangeRecordDAO_all_column_fields" />
		 FROM
		 	exchange_record
			<include refid="MybatisExchangeRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchangeRecordDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.ExchangeRecordDO">
	     SELECT
	     	count(1)
		 FROM
		 	exchange_record
	 	<include refid="MybatisExchangeRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchangeRecordDAO_select_dynamic_page_query" resultMap="ExchangeRecordDOResultMap" parameterType="com.checc.domain.ExchangeRecordDO">
	     SELECT
	     	<include refid="MybatisExchangeRecordDAO_all_column_fields" />
		 FROM
		 	exchange_record
	 	<include refid="MybatisExchangeRecordDAO_dynamic_where_fields" />
	 	ORDER BY exchange_record.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>