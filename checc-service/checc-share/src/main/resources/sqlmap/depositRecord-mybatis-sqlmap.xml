<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.DepositRecordMapper">

	<resultMap type="com.checc.domain.DepositRecordDO" id="DepositRecordDOResultMap">
		<id column="id" property="id" />
        <result column="user_id" property="userId"/>
        <result column="deposit_type" property="depositType"/>
        <result column="card_no" property="cardNo"/>
        <result column="amount" property="amount"/>
        <result column="create_time" property="createTime"/>
	</resultMap>

	<sql id="MybatisDepositRecordDAO_all_column_fields">
	      id,user_id,deposit_type,card_no,amount,create_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisDepositRecordDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="userId != null "> AND user_id=#{userId} </if>
			<if test="depositType != null  and depositType != '' "> AND deposit_type=#{depositType} </if>
			<if test="cardNo != null  and cardNo != '' "> AND card_no=#{cardNo} </if>
			<if test="amount != null "> AND amount=#{amount} </if>
		</where>
 	</sql>

	<select id="MybatisDepositRecordDAO_selectById" parameterType="long" resultMap="DepositRecordDOResultMap">
	SELECT
		<include refid="MybatisDepositRecordDAO_all_column_fields" />
	FROM
		deposit_record
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisDepositRecordDAO_insert" parameterType="com.checc.domain.DepositRecordDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO deposit_record(
				id,
				user_id,
				deposit_type,
				card_no,
				amount,
				create_time
		)values(
				#{id},
				#{userId},
				#{depositType},
				#{cardNo},
				#{amount},
				#{createTime}
		)
    </insert>

	<update id="MybatisDepositRecordDAO_updateById" parameterType="com.checc.domain.DepositRecordDO">
		UPDATE deposit_record
		SET
					user_id = #{userId},
					deposit_type = #{depositType},
					card_no = #{cardNo},
					amount = #{amount},
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisDepositRecordDAO_deleteById" parameterType="long">
		DELETE FROM deposit_record WHERE id = #{id}
	</delete>

	<update id="MybatisDepositRecordDAO_update_dynamic" parameterType="com.checc.domain.DepositRecordDO">
		UPDATE deposit_record
		<set>
					<if test="userId != null ">user_id=#{userId},</if>
					<if test="depositType != null  and depositType != '' ">deposit_type=#{depositType},</if>
					<if test="cardNo != null  and cardNo != '' ">card_no=#{cardNo},</if>
					<if test="amount != null ">amount=#{amount},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisDepositRecordDAO_select_dynamic" resultMap="DepositRecordDOResultMap" parameterType="com.checc.domain.DepositRecordDO">
	     SELECT
	     	<include refid="MybatisDepositRecordDAO_all_column_fields" />
		 FROM
		 	deposit_record
			<include refid="MybatisDepositRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisDepositRecordDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.DepositRecordDO">
	     SELECT
	     	count(1)
		 FROM
		 	deposit_record
	 	<include refid="MybatisDepositRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisDepositRecordDAO_select_dynamic_page_query" resultMap="DepositRecordDOResultMap" parameterType="com.checc.domain.DepositRecordDO">
	     SELECT
	     	<include refid="MybatisDepositRecordDAO_all_column_fields" />
		 FROM
		 	deposit_record
	 	<include refid="MybatisDepositRecordDAO_dynamic_where_fields" />
	 	ORDER BY deposit_record.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>