<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.ExpressInfoMapper">

	<resultMap type="com.checc.domain.ExpressInfoDO" id="ExpressInfoDOResultMap">
		<id column="id" property="id" />
        <result column="name" property="name"/>
        <result column="brief_code" property="briefCode"/>
        <result column="company_code" property="companyCode"/>
        <result column="initial" property="initial"/>
        <result column="is_commonly_used" property="isCommonlyUsed"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisExpressInfoDAO_all_column_fields">
	      id,name,brief_code,company_code,initial,is_commonly_used,create_time,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisExpressInfoDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="name != null  and name != '' "> AND name=#{name} </if>
			<if test="briefCode != null  and briefCode != '' "> AND brief_code=#{briefCode} </if>
			<if test="companyCode != null  and companyCode != '' "> AND company_code=#{companyCode} </if>
			<if test="initial != null  and initial != '' "> AND initial=#{initial} </if>
			<if test="isCommonlyUsed != null "> AND is_commonly_used=#{isCommonlyUsed} </if>
		</where>
 	</sql>
	
	<select id="MybatisExpressInfoDAO_selectById" parameterType="long" resultMap="ExpressInfoDOResultMap">
		SELECT
			<include refid="MybatisExpressInfoDAO_all_column_fields" />
		FROM
			express_info
		WHERE
			 id = #{id}
	</select>
	
	
	
    <insert id="MybatisExpressInfoDAO_insert" parameterType="com.checc.domain.ExpressInfoDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO express_info(
				id,
				name,
				brief_code,
				company_code,
				initial,
				is_commonly_used,
				create_time,
				modify_time
		)values(
				#{id},
				#{name},
				#{briefCode},
				#{companyCode},
				#{initial},
				#{isCommonlyUsed},
				#{createTime},
				#{modifyTime}
		)
    </insert>
	

	<update id="MybatisExpressInfoDAO_updateById" parameterType="com.checc.domain.ExpressInfoDO">
		UPDATE express_info
		SET
					name = #{name},
					brief_code = #{briefCode},
					company_code = #{companyCode},
					initial = #{initial},
					is_commonly_used = #{isCommonlyUsed},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisExpressInfoDAO_deleteById" parameterType="long">
		DELETE FROM express_info WHERE id = #{id}
	</delete>
	
	
	<update id="MybatisExpressInfoDAO_update_dynamic" parameterType="com.checc.domain.ExpressInfoDO">
		UPDATE express_info
		<set>
					<if test="name != null  and name != '' ">name=#{name},</if>
					<if test="briefCode != null  and briefCode != '' ">brief_code=#{briefCode},</if>
					<if test="companyCode != null  and companyCode != '' ">company_code=#{companyCode},</if>
					<if test="initial != null  and initial != '' ">initial=#{initial},</if>
					<if test="isCommonlyUsed != null ">is_commonly_used=#{isCommonlyUsed},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisExpressInfoDAO_select_dynamic" resultMap="ExpressInfoDOResultMap" parameterType="com.checc.domain.ExpressInfoDO">
	     SELECT
	     	<include refid="MybatisExpressInfoDAO_all_column_fields" />
		 FROM
		 	express_info
			<include refid="MybatisExpressInfoDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExpressInfoDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.ExpressInfoDO">
	     SELECT
	     	count(1)
		 FROM
		 	express_info
	 	<include refid="MybatisExpressInfoDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExpressInfoDAO_select_dynamic_page_query" resultMap="ExpressInfoDOResultMap" parameterType="com.checc.domain.ExpressInfoDO">
	     SELECT
	     	<include refid="MybatisExpressInfoDAO_all_column_fields" />
		 FROM
		 	express_info
	 	<include refid="MybatisExpressInfoDAO_dynamic_where_fields" />
	 	ORDER BY express_info.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>