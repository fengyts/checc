<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.ExchangeOrderStatusMapper">

	<resultMap type="com.checc.domain.ExchangeOrderStatusDO" id="ExchangeOrderStatusDOResultMap">
		<id column="id" property="id" />
        <result column="record_id" property="recordId"/>
        <result column="shipments_status" property="shipmentsStatus"/>
        <result column="shipments_time" property="shipmentsTime"/>
        <result column="remark" property="remark"/>
        <result column="modify_user_id" property="modifyUserId"/>
	</resultMap>

	<sql id="MybatisExchangeOrderStatusDAO_all_column_fields">
	      id,record_id,shipments_status,shipments_time,remark,modify_user_id
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisExchangeOrderStatusDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="recordId != null "> AND record_id=#{recordId} </if>
			<if test="shipmentsStatus != null  and shipmentsStatus != '' "> AND shipments_status=#{shipmentsStatus} </if>
			<if test="remark != null  and remark != '' "> AND remark=#{remark} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>

	<select id="MybatisExchangeOrderStatusDAO_selectById" parameterType="long" resultMap="ExchangeOrderStatusDOResultMap">
	SELECT
		<include refid="MybatisExchangeOrderStatusDAO_all_column_fields" />
	FROM
		exchange_order_status
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisExchangeOrderStatusDAO_insert" parameterType="com.checc.domain.ExchangeOrderStatusDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO exchange_order_status(
				id,
				record_id,
				shipments_status,
				shipments_time,
				remark,
				modify_user_id
		)values(
				#{id},
				#{recordId},
				#{shipmentsStatus},
				#{shipmentsTime},
				#{remark},
				#{modifyUserId}
		)
    </insert>

	<update id="MybatisExchangeOrderStatusDAO_updateById" parameterType="com.checc.domain.ExchangeOrderStatusDO">
		UPDATE exchange_order_status
		SET
					record_id = #{recordId},
					shipments_status = #{shipmentsStatus},
					shipments_time = #{shipmentsTime},
					remark = #{remark},
					modify_user_id = #{modifyUserId}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisExchangeOrderStatusDAO_deleteById" parameterType="long">
		DELETE FROM exchange_order_status WHERE id = #{id}
	</delete>

	<update id="MybatisExchangeOrderStatusDAO_update_dynamic" parameterType="com.checc.domain.ExchangeOrderStatusDO">
		UPDATE exchange_order_status
		<set>
					<if test="recordId != null ">record_id=#{recordId},</if>
					<if test="shipmentsStatus != null  and shipmentsStatus != '' ">shipments_status=#{shipmentsStatus},</if>
					<if test="shipmentsTime != null ">shipments_time=#{shipmentsTime},</if>
					<if test="remark != null  and remark != '' ">remark=#{remark},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisExchangeOrderStatusDAO_select_dynamic" resultMap="ExchangeOrderStatusDOResultMap" parameterType="com.checc.domain.ExchangeOrderStatusDO">
	     SELECT
	     	<include refid="MybatisExchangeOrderStatusDAO_all_column_fields" />
		 FROM
		 	exchange_order_status
			<include refid="MybatisExchangeOrderStatusDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchangeOrderStatusDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.ExchangeOrderStatusDO">
	     SELECT
	     	count(1)
		 FROM
		 	exchange_order_status
	 	<include refid="MybatisExchangeOrderStatusDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisExchangeOrderStatusDAO_select_dynamic_page_query" resultMap="ExchangeOrderStatusDOResultMap" parameterType="com.checc.domain.ExchangeOrderStatusDO">
	     SELECT
	     	<include refid="MybatisExchangeOrderStatusDAO_all_column_fields" />
		 FROM
		 	exchange_order_status
	 	<include refid="MybatisExchangeOrderStatusDAO_dynamic_where_fields" />
	 	ORDER BY exchange_order_status.id DESC
	 	Limit #{start},#{pageSize}
 	</select>
 	
 	<select id="MybatisExchangeOrderStatusDAO_select_order_status_detail" parameterType="long" resultType="com.checc.vo.ExchangeOrderStatusVO">
 		SELECT 
			tp.id topicId, tp.topic_type topicType, tp.start_time startTime, tp.end_time endTime,
			ti.id tiId, ti.item_title itemTitle, ti.market_price marketPrice, ti.exchange_amount exchangeAmount,
			ar.exchange_count exchangeCount, ar.create_time auctTime,
			eor.shipments_status shipmentsStatus, eor.shipments_time shipmentsTime
		FROM auction_record ar
		INNER JOIN exchange_order_status eor ON eor.record_id = ar.id
		LEFT JOIN topic_item ti ON ti.id = ar.topic_item_id
		LEFT JOIN topic tp ON tp.id = ti.topic_id
		WHERE ar.id = #{recordId}
 	
 	</select>

</mapper>