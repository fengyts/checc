	<select id="MybatisDepositOrderDAO_selectById" parameterType="long" resultMap="DepositOrderDOResultMap">
	SELECT
		<include refid="MybatisDepositOrderDAO_all_column_fields" />
	FROM
		deposit_order
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisDepositOrderDAO_insert" parameterType="com.checc.domain.DepositOrderDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO deposit_order(
				id,
				order_no,
				user_id,
				deposit_type,
				discount_id,
				deposit_amount,
				discount,
				order_status,
				trade_state,
				trade_state_desc,
				transaction_id,
				bank_type,
				err_code,
				err_code_des,
				time_end,
				create_time,
				modify_time
		)values(
				#{id},
				#{orderNo},
				#{userId},
				#{depositType},
				#{discountId},
				#{depositAmount},
				#{discount},
				#{orderStatus},
				#{tradeState},
				#{tradeStateDesc},
				#{transactionId},
				#{bankType},
				#{errCode},
				#{errCodeDes},
				#{timeEnd},
				#{createTime},
				#{modifyTime}
		)
    </insert>

