<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.AuctionRecordMapper">

	<resultMap type="com.checc.domain.AuctionRecordDO" id="AuctionRecordDOResultMap">
		<id column="id" property="id" />
        <result column="topic_item_id" property="topicItemId"/>
        <result column="record_type" property="recordType"/>
        <result column="deposit_type" property="depositType"/>
        <result column="user_id" property="userId"/>
        <result column="nickname" property="nickname"/>
        <result column="mobile" property="mobile"/>
        <result column="bid_num" property="bidNum"/>
        <result column="exchange_count" property="exchangeCount"/>
        <result column="total_currency" property="totalCurrency"/>
        <result column="current_auct_price" property="currentAuctPrice"/>
        <result column="card_no" property="cardNo"/>
        <result column="deposit_amount" property="depositAmount"/>
        <result column="create_time" property="createTime"/>
	</resultMap>

	<sql id="MybatisAuctionRecordDAO_all_column_fields">
	      id,topic_item_id,record_type,deposit_type,user_id,nickname,mobile,bid_num,exchange_count,total_currency,current_auct_price,card_no,deposit_amount,create_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisAuctionRecordDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="topicItemId != null "> AND topic_item_id=#{topicItemId} </if>
			<if test="recordType != null  and recordType != '' "> AND record_type=#{recordType} </if>
			<if test="depositType != null  and depositType != '' "> AND deposit_type=#{depositType} </if>
			<if test="userId != null "> AND user_id=#{userId} </if>
			<if test="nickname != null  and nickname != '' "> AND nickname=#{nickname} </if>
			<if test="mobile != null  and mobile != '' "> AND mobile=#{mobile} </if>
			<if test="bidNum != null "> AND bid_num=#{bidNum} </if>
			<if test="exchangeCount != null "> AND exchange_count=#{exchangeCount} </if>
			<if test="totalCurrency != null "> AND total_currency=#{totalCurrency} </if>
			<if test="currentAuctPrice != null "> AND current_auct_price=#{currentAuctPrice} </if>
			<if test="cardNo != null  and cardNo != '' "> AND card_no=#{cardNo} </if>
			<if test="depositAmount != null "> AND deposit_amount=#{depositAmount} </if>
		</where>
 	</sql>

	<select id="MybatisAuctionRecordDAO_selectById" parameterType="long" resultMap="AuctionRecordDOResultMap">
	SELECT
		<include refid="MybatisAuctionRecordDAO_all_column_fields" />
	FROM
		auction_record
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisAuctionRecordDAO_insert" parameterType="com.checc.domain.AuctionRecordDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO auction_record(
				id,
				topic_item_id,
				record_type,
				deposit_type,
				user_id,
				nickname,
				mobile,
				bid_num,
				exchange_count,
				total_currency,
				current_auct_price,
				card_no,
				deposit_amount,
				create_time
		)values(
				#{id},
				#{topicItemId},
				#{recordType},
				#{depositType},
				#{userId},
				#{nickname},
				#{mobile},
				#{bidNum},
				#{exchangeCount},
				#{totalCurrency},
				#{currentAuctPrice},
				#{cardNo},
				#{depositAmount},
				#{createTime}
		)
    </insert>

	<update id="MybatisAuctionRecordDAO_updateById" parameterType="com.checc.domain.AuctionRecordDO">
		UPDATE auction_record
		SET
					topic_item_id = #{topicItemId},
					record_type = #{recordType},
					deposit_type = #{depositType},
					user_id = #{userId},
					nickname = #{nickname},
					mobile = #{mobile},
					bid_num = #{bidNum},
					exchange_count = #{exchangeCount},
					total_currency = #{totalCurrency},
					current_auct_price = #{currentAuctPrice},
					card_no = #{cardNo},
					deposit_amount = #{depositAmount},
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisAuctionRecordDAO_deleteById" parameterType="long">
		DELETE FROM auction_record WHERE id = #{id}
	</delete>

	<update id="MybatisAuctionRecordDAO_update_dynamic" parameterType="com.checc.domain.AuctionRecordDO">
		UPDATE auction_record
		<set>
					<if test="topicItemId != null ">topic_item_id=#{topicItemId},</if>
					<if test="recordType != null  and recordType != '' ">record_type=#{recordType},</if>
					<if test="depositType != null  and depositType != '' ">deposit_type=#{depositType},</if>
					<if test="userId != null ">user_id=#{userId},</if>
					<if test="nickname != null  and nickname != '' ">nickname=#{nickname},</if>
					<if test="mobile != null  and mobile != '' ">mobile=#{mobile},</if>
					<if test="bidNum != null ">bid_num=#{bidNum},</if>
					<if test="exchangeCount != null ">exchange_count=#{exchangeCount},</if>
					<if test="totalCurrency != null ">total_currency=#{totalCurrency},</if>
					<if test="currentAuctPrice != null ">current_auct_price=#{currentAuctPrice},</if>
					<if test="cardNo != null  and cardNo != '' ">card_no=#{cardNo},</if>
					<if test="depositAmount != null ">deposit_amount=#{depositAmount},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisAuctionRecordDAO_select_dynamic" resultMap="AuctionRecordDOResultMap" parameterType="com.checc.domain.AuctionRecordDO">
	     SELECT
	     	<include refid="MybatisAuctionRecordDAO_all_column_fields" />
		 FROM
		 	auction_record
			<include refid="MybatisAuctionRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisAuctionRecordDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.AuctionRecordDO">
	     SELECT
	     	count(1)
		 FROM
		 	auction_record
	 	<include refid="MybatisAuctionRecordDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisAuctionRecordDAO_select_dynamic_page_query" resultMap="AuctionRecordDOResultMap" parameterType="com.checc.domain.AuctionRecordDO">
	     SELECT
	     	<include refid="MybatisAuctionRecordDAO_all_column_fields" />
		 FROM
		 	auction_record
	 	<include refid="MybatisAuctionRecordDAO_dynamic_where_fields" />
	 	ORDER BY auction_record.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

 	<select id="MybatisAuctionRecordDAO_select_latest" parameterType="long" resultMap="AuctionRecordDOResultMap">
 		 SELECT
	     	<include refid="MybatisAuctionRecordDAO_all_column_fields" />
		 FROM
		 	auction_record
		 WHERE 
		 	topic_item_id = #{topicItemId}
 		 ORDER BY create_time DESC
 	 	 Limit 1
 	</select>
 	
 	<select id="MybatisAuctionRecordDAO_select_uc_count" parameterType="map" resultType="long">
 		SELECT 
 			COUNT(1)
 		FROM auction_record ar
 		INNER JOIN 
		(
			SELECT MAX(id) id
			FROM auction_record
			WHERE user_id = #{userId} AND record_type = #{recordType}
			GROUP BY topic_item_id
		) b 
		ON ar.id = b.id AND ar.user_id = #{userId} AND ar.record_type = #{recordType}
 	</select>
 	
 	<select id="MybatisAuctionRecordDAO_select_uc_list" parameterType="map" resultMap="AuctionRecordDOResultMap" >
 		SELECT 
 			ar.id,topic_item_id,record_type,deposit_type,user_id,
 			nickname,mobile,bid_num,exchange_count,total_currency,
 			current_auct_price,card_no,deposit_amount,create_time
		FROM auction_record ar
		INNER JOIN 
		(
			SELECT MAX(id) id
			FROM auction_record
			WHERE user_id = #{userId} AND record_type = #{recordType}
			GROUP BY topic_item_id
		) b 
		ON ar.id = b.id AND ar.user_id = #{userId} AND ar.record_type = #{recordType}
		ORDER BY ar.id DESC
		Limit #{start},#{pageSize}
				
 	</select>
 	

</mapper>