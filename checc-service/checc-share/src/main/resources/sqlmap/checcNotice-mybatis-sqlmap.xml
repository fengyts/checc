<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.checc.domain.CheccNoticeMapper">

	<resultMap type="com.checc.domain.CheccNoticeDO" id="CheccNoticeDOResultMap">
		<id column="id" property="id" />
        <result column="type" property="type"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="target_url" property="targetUrl"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisCheccNoticeDAO_all_column_fields">
	      id,type,title,content,target_url,create_user_id,create_time,modify_user_id,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisCheccNoticeDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="type != null  and type != '' "> AND type=#{type} </if>
			<if test="title != null  and title != '' "> AND title=#{title} </if>
			<if test="content != null  and content != '' "> AND content=#{content} </if>
			<if test="targetUrl != null  and targetUrl != '' "> AND target_url=#{targetUrl} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>

	<select id="MybatisCheccNoticeDAO_selectById" parameterType="long" resultMap="CheccNoticeDOResultMap">
	SELECT
		<include refid="MybatisCheccNoticeDAO_all_column_fields" />
	FROM
		checc_notice
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisCheccNoticeDAO_insert" parameterType="com.checc.domain.CheccNoticeDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO checc_notice(
				id,
				type,
				title,
				content,
				target_url,
				create_user_id,
				create_time,
				modify_user_id,
				modify_time
		)values(
				#{id},
				#{type},
				#{title},
				#{content},
				#{targetUrl},
				#{createUserId},
				#{createTime},
				#{modifyUserId},
				#{modifyTime}
		)
    </insert>

	<update id="MybatisCheccNoticeDAO_updateById" parameterType="com.checc.domain.CheccNoticeDO">
		UPDATE checc_notice
		SET
					type = #{type},
					title = #{title},
					content = #{content},
					target_url = #{targetUrl},
					create_user_id = #{createUserId},
					modify_user_id = #{modifyUserId},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisCheccNoticeDAO_deleteById" parameterType="long">
		DELETE FROM checc_notice WHERE id = #{id}
	</delete>

	<update id="MybatisCheccNoticeDAO_update_dynamic" parameterType="com.checc.domain.CheccNoticeDO">
		UPDATE checc_notice
		<set>
					<if test="type != null  and type != '' ">type=#{type},</if>
					<if test="title != null  and title != '' ">title=#{title},</if>
					<if test="content != null  and content != '' ">content=#{content},</if>
					<if test="targetUrl != null  and targetUrl != '' ">target_url=#{targetUrl},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisCheccNoticeDAO_select_dynamic" resultMap="CheccNoticeDOResultMap" parameterType="com.checc.domain.CheccNoticeDO">
	     SELECT
	     	<include refid="MybatisCheccNoticeDAO_all_column_fields" />
		 FROM
		 	checc_notice
			<include refid="MybatisCheccNoticeDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisCheccNoticeDAO_select_dynamic_count" resultType="long" parameterType="com.checc.domain.CheccNoticeDO">
	     SELECT
	     	count(1)
		 FROM
		 	checc_notice
	 	<include refid="MybatisCheccNoticeDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisCheccNoticeDAO_select_dynamic_page_query" resultMap="CheccNoticeDOResultMap" parameterType="com.checc.domain.CheccNoticeDO">
	     SELECT
	     	<include refid="MybatisCheccNoticeDAO_all_column_fields" />
		 FROM
		 	checc_notice
	 	<include refid="MybatisCheccNoticeDAO_dynamic_where_fields" />
	 	ORDER BY checc_notice.id DESC
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>